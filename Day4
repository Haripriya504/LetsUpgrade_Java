package com.assignment;

public class SumOfArrElements {
	public static void main(String[] args) {
	int arr[]= {1,2,3,4,5};
	int i,sum=0;
	for(sum=i=0;i<arr.length;i++)
		sum+=arr[i];
	System.out.println("Sum of Numbers is:"+sum);
	}
}
